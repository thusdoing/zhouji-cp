.play-content {
  padding: 0px 10px 30px 10px;
  background-color: #fff;
  margin-bottom: 60px;

  .btn-error {
    display: block;
    width: 100%;
    line-height: 40px;
    text-align: center;
    background: #ec2829;
    color: #ffffff;
    font-weight: 400;
    border-radius: 3px;
    border-width: 0;
    border-color: #ec2829;
    padding: 0 4px;
    position: relative;
    float: right;
    font-size: 14px;
    margin: 5px 0;
  }

  .textarea-box {
    height: 230px;
    padding: 10px;
    border: 1px solid #d9d9d9;
    textarea{
      border: none;
      outline: none;
      width: 100%;
      height: 100%;
      resize: none;
      font-size: 14px;
    }
  }

  .playitd-wrap {
    padding:20px 0;
    display:flex;
    font-size:12px;
    align-items:center;

    p {
      flex: 1;
      line-height: 1.15;
    }

    .random-wrap {
      display: flex;margin-left:5px;
      align-items: center;
      justify-content: center;
      width: 80px;height:30px;
      border: 1px solid #b9b9b9;
      color: #b9b9b9;
      border-radius: 4px;

      img {
        width: 23px;
        height: 23px;
      }

      span {
        font-size: 16px;
        color: #9b9b9b
      }
    }
  }

  .boxshow-wrap {
    margin-top: 15px;
    display:flex;
    flex-direction:row;
    font-size:13px;

    .pos-show {
      width:80px;
      height: 22px;
      border-left:2px solid red;
      padding-left:3px;
    }

    .box-and-quick {
      flex:1;

      .quick-wrap {
        display:flex;
        flex-direction:row;
        justify-content:space-between;
        border-left: 1px solid #ccc;
        margin: 0 auto;
        width: 300px;

        .ball-quick {
          flex:1;
          border:1px solid #ccc;
          border-left: none;
          background-color:#f6f6f6;
          color:#666;
          text-align:center;
        }

        .active {
          background-color: #e8173d;
          color: #fff;
          border-color: #e8173d;
        }
      }

      .ball-wrap {
        margin: 10px auto 0;
        display:flex;
        flex-direction:row;
        justify-content: flex-start;
        flex-wrap:wrap;
        width:300px;

        .ball {
          background-color: #fff;
          color: red;
          border: solid 1px #e6e6e6;
          font-size: 18px;
          text-align: center;
          width: 35px;
          height: 35px;
          margin: 6px;
          border-radius: 50%;
          display: flex;
          align-items: center;
          justify-content: center;
        }

        .active {
          background-color: #e8173d;
          color: #fff;
        }
      }
    }
  }

  .danTuo{
    .box-and-quick {
      .ball-wrap {
        margin: 0 auto;
        .ball {
          margin: 0 6px 6px;
        }
      }
    }
  }
  
  .interest{
    .box-and-quick {
      .ball-wrap {
        margin: 0 auto;
        width: 252px;
        .ball {
          width: 70px;
          border-radius: 18px;
        }
      }
    }
  }

}

.okbet-wraps {
  padding: 10px;
  font-size: 13px;
  position: fixed;
  z-index: 500;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: rgba(0,0,0,0.78);
  color: #fff;
  line-height: 40px;

  & > i {
    font-size:30px;
    vertical-align: middle;
  }

  .btn-error {
    display: block;
    width: 80px;
    line-height: 40px;
    text-align: center;
    background: #ec2829;
    color: #ffffff;
    font-size: 14px;
    font-weight: 400;
    border-radius: 3px;
    border-width: 0;
    border-color: #ec2829;
    padding: 0 4px;
    position: relative;
    float:right;
    font-size:14px;

    &:focus {
      outline: none;
    }
  }
}

.local-wrap {
  .position-area {
    display: flex;
    align-items: center;

    label {
      font-size: 13px;
      margin-right: 5px;
    }
  }

  .notice-area {
    font-size: 13px;
    margin-top:5px;
  }

  margin-bottom: 10px;
}

.demo1-item {
  border: 1px solid #ececec;
  padding: 5px 15px;
}
.demo1-item-selected {
  border: 1px solid #ec2829;
}