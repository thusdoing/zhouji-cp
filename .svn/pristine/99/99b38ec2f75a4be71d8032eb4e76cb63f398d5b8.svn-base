.play-content {
  padding: 0px 10px 30px 10px;
  background-color: #fff;
  margin-bottom: 60px;
  .btn-error {
    display: block;
    width: 100%;
    line-height: 40px;
    text-align: center;
    background: @theme-color;
    color: #ffffff;
    font-weight: 400;
    border-radius: 3px;
    border-width: 0;
    border-color: @theme-color;
    padding: 0 4px;
    position: relative;
    float: right;
    font-size: 14px;
    margin: 5px 0;
  }
  .textarea-box {
    height: 230px;
    padding: 10px;
    border: 1px solid #d9d9d9;
    textarea {
      border: none;
      outline: none;
      width: 100%;
      height: 100%;
      resize: none;
      font-size: 14px;
    }
  }
  .playitd-wrap {
    padding: 20px 0;
    display: flex;
    font-size: 12px;
    align-items: center;
    p {
      flex: 1;
      line-height: 1.5rem;
      font-size: 1.3rem;
    }
    .random-wrap {
      display: flex;
      margin-left: 5px;
      align-items: center;
      justify-content: center;
      width: 80px;
      height: 30px;
      border: 1px solid #b9b9b9;
      color: #b9b9b9;
      border-radius: 4px;
      img {
        width: 23px;
        height: 23px;
      }
      span {
        font-size: 16px;
        color: #9b9b9b
      }
    }
  }
  .boxshow-wrap {
    margin-top: 15px;
    display: flex;
    flex-direction: row;
    font-size: 13px;
    .pos-show {
      width: 60px;
      height: 22px;
      border-left: 2px solid @theme-color;
      padding-left: 3px;
    }
    .box-and-quick {
      flex: 1;
      .quick-wrap {
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        border-left: 1px solid #ccc;
        margin: 0 auto; // width: 300px;  
        .ball-quick {
          flex: 1;
          border: 1px solid #ccc;
          border-left: none;
          background-color: #f6f6f6;
          color: #666;
          text-align: center;
          line-height: 30px;
          font-size: 1.5rem;
        }
        .active {
          background-color: @theme-color;
          color: #fff;
          border-color: @theme-color;
        }
      }
      .ball-wrap {
        margin: 10px auto 0;
        display: flex;
        flex-direction: row;
        justify-content: flex-start; // justify-content: space-around;
        flex-wrap: wrap; // width:300px;
        .ball {
          background-color: #fff;
          color: @theme-color;
          border: solid 1px #e6e6e6;
          font-size: 18px;
          text-align: center;
          width: 35px;
          height: 35px;
          margin: 6px;
          border-radius: 50%;
          display: flex;
          align-items: center;
          justify-content: center;
        }
        .active {
          background-color: @theme-color;
          border-color: @theme-color;
          color: #fff;
        }
      }
    }
  }
  .danTuo {
    .box-and-quick {
      .ball-wrap {
        margin: 0 auto;
        .ball {
          margin: 0 6px 14px;
        }
      }
    }
  }
  .interest {
    .box-and-quick {
      .ball-wrap {
        margin: 0 auto; // width: 252px;
        .ball {
          width: 100px;
          border-radius: 4px;
        }
      }
    }
  }
}

